<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bckgnd">

    <Button
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/packingRoomButton"

        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:textColorHighlight="#c25f5f"
        android:text="ROOM"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/round_button"
        android:focusable="false"
        android:textStyle="bold"
        android:textSize="20dp"
        android:typeface="normal" />

    <Button
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/packKitchenButton"

        android:layout_alignBottom="@+id/packingRoomButton"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:text="KITCHEN"
        android:background="@drawable/round_button"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/packLivingButton"

        android:layout_below="@+id/packingRoomButton"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:text="LIVING ROOM"
        android:background="@drawable/round_button"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:id="@+id/packBathroomButtom"

        android:layout_alignTop="@+id/packLivingButton"
        android:layout_alignParentEnd="true"
        android:textColor="#f9f5f5"
        android:text="BATHROOM"
        android:background="@drawable/round_button"
        android:textStyle="bold"
        android:textSize="20dp" />

</RelativeLayout>
